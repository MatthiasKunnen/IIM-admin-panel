<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import org.controlsfx.control.textfield.CustomTextField?>

<fx:root minHeight="463.0" minWidth="615.0" type="VBox" xmlns="http://javafx.com/javafx/8.0.65"
         xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <HBox alignment="CENTER_LEFT">
            <children>
                <ImageView fx:id="ivPhoto" fitHeight="200.0" onMouseClicked="#selectImage" pickOnBounds="true"
                           preserveRatio="true" smooth="false">
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                    <image>
                        <Image url="@images/placeholder.png"/>
                    </image>
                    <HBox.margin>
                        <Insets left="14.0" right="10.0"/>
                    </HBox.margin>
                </ImageView>
                <AnchorPane id="AnchorPane" minHeight="-Infinity" minWidth="-Infinity" prefHeight="224.0"
                            HBox.hgrow="ALWAYS">
                    <children>
                        <TextArea fx:id="tfDescription" layoutX="214.0" layoutY="58.0" prefHeight="130.0"
                                  promptText="Omschrijving" wrapText="true" AnchorPane.leftAnchor="10.0"
                                  AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="49.0"/>
                        <HBox layoutX="224.0" layoutY="14.0" prefHeight="25.0" prefWidth="200.0"
                              AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="14.0">
                            <children>
                                <CustomTextField fx:id="tfName" maxHeight="1.7976931348623157E308"
                                                 maxWidth="1.7976931348623157E308" promptText="Naam"
                                                 HBox.hgrow="ALWAYS">
                                    <HBox.margin>
                                        <Insets right="5.0"/>
                                    </HBox.margin>
                                </CustomTextField>
                                <TextField fx:id="tfArticleNumber" maxHeight="1.7976931348623157E308"
                                           maxWidth="1.7976931348623157E308" prefHeight="25.0"
                                           promptText="Artikelnummer" HBox.hgrow="ALWAYS">
                                    <HBox.margin>
                                        <Insets left="5.0" right="5.0"/>
                                    </HBox.margin>
                                </TextField>
                                <CustomTextField fx:id="tfPrice" maxHeight="-Infinity" maxWidth="-Infinity"
                                                 minWidth="-Infinity" prefHeight="25.0" prefWidth="100.0"
                                                 promptText="Prijs" HBox.hgrow="NEVER">
                                    <HBox.margin>
                                        <Insets left="5.0"/>
                                    </HBox.margin>
                                </CustomTextField>
                            </children>
                        </HBox>
                        <HBox layoutX="198.0" layoutY="202.0" maxWidth="1.7976931348623157E308" prefHeight="25.0"
                              prefWidth="200.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="14.0"
                              AnchorPane.topAnchor="189.0">
                            <children>
                                <org.controlsfx.control.CheckComboBox fx:id="cboTargetAudience" maxWidth="1.7976931348623157E308" prefHeight="25.0"
                                          prefWidth="0.0" HBox.hgrow="ALWAYS">
                                    <HBox.margin>
                                        <Insets right="5.0"/>
                                    </HBox.margin>
                                </org.controlsfx.control.CheckComboBox>
                                <org.controlsfx.control.CheckComboBox fx:id="cboCurricular" maxWidth="1.7976931348623157E308" prefHeight="25.0"
                                          prefWidth="0.0" HBox.hgrow="ALWAYS">
                                    <HBox.margin>
                                        <Insets left="5.0" right="5.0"/>
                                    </HBox.margin>
                                </org.controlsfx.control.CheckComboBox>
                                <ComboBox fx:id="cboFirm" maxWidth="1.7976931348623157E308" prefHeight="25.0"
                                          promptText="Firma" HBox.hgrow="ALWAYS">
                                    <HBox.margin>
                                        <Insets left="5.0"/>
                                    </HBox.margin>
                                </ComboBox>
                            </children>
                        </HBox>
                    </children>
                </AnchorPane>
            </children>
        </HBox>
        <AnchorPane prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
            <children>
                <TableView fx:id="tvIdentifiers" editable="true" layoutX="25.0" prefHeight="200.0" prefWidth="200.0"
                           style="-fx-focus-color: transparent" AnchorPane.bottomAnchor="10.0"
                           AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="45.0">
                    <columns>
                        <TableColumn fx:id="tcId" maxWidth="50.0" minWidth="50.0" prefWidth="50.0"
                                     style="-fx-alignment: center" text="#"/>
                        <TableColumn fx:id="tcLocation" editable="true" prefWidth="75.0" style="-fx-alignment: center" text="Plaats"/>
                        <TableColumn fx:id="tcAmount" editable="true" prefWidth="75.0" style="-fx-alignment: center" text="Aantal"/>

                        <TableColumn fx:id="tcAvailable" prefWidth="116.0" style="-fx-alignment: center"
                                     text="Beschikbaarheid"/>
                        <TableColumn fx:id="tcActions" prefWidth="75.0" style="-fx-alignment: center" text="Acties"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
                <HBox layoutY="-26.0" prefHeight="25.0" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="14.0"
                      AnchorPane.topAnchor="10.0">
                    <children>
                        <TextField fx:id="tfAmount" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="75.0"
                                   promptText="Aantal" HBox.hgrow="ALWAYS">
                            <HBox.margin>
                                <Insets right="5.0"/>
                            </HBox.margin>
                        </TextField>
                        <TextField fx:id="tfLocation" onAction="#tfLocationAction" promptText="Locatie"
                                   HBox.hgrow="ALWAYS">
                            <HBox.margin>
                                <Insets left="5.0" right="5.0"/>
                            </HBox.margin>
                        </TextField>
                        <Pane fx:id="pnVisibilityPicker"/>
                        <StackPane prefWidth="25.0">
                            <HBox.margin>
                                <Insets left="5.0"/>
                            </HBox.margin>
                            <children>
                                <ImageView fitHeight="25.0" fitWidth="25.0" HBox.hgrow="NEVER">
                                    <image>
                                        <Image url="@images/plus.png"/>
                                    </image>
                                </ImageView>
                                <Rectangle height="25.0" onMouseClicked="#addIdentifier" opacity="0.0" width="25.0">
                                    <cursor>
                                        <Cursor fx:constant="HAND"/>
                                    </cursor>
                                </Rectangle>
                            </children>
                        </StackPane>
                    </children>
                </HBox>
            </children>
        </AnchorPane>
        <HBox alignment="CENTER" prefHeight="25.0" prefWidth="200.0">
            <children>
                <Button fx:id="btnSave" mnemonicParsing="false" onAction="#saveMaterial" text="Opslaan">
                    <HBox.margin>
                        <Insets bottom="14.0" left="5.0" right="14.0"/>
                    </HBox.margin>
                </Button>
                <Button fx:id="btnCancel" mnemonicParsing="false" onAction="#cancel" text="Sluiten">
                    <HBox.margin>
                        <Insets bottom="14.0" right="5.0"/>
                    </HBox.margin>
                </Button>
            </children>
        </HBox>
    </children>
</fx:root>
